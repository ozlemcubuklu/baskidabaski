@using baskidabaski.Areas.Admin.Models;

@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
@model RoleModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Role Ekle</span> </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <div class="card-body">

                    <form method="post" >
                        <div class="row">
                            <div class="col-md-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>
                        <div>
                            <label for="defaultFormControlInput" class="form-label" asp-for="Name"></label>
                            <input type="text"
                                   class="form-control"
                                   id="defaultFormControlInput" asp-for="Name"
                                   aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div id="defaultFormControlHelp" class="form-text">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>

                    </form>
                    <div>
                        <a href="/admin/Role/index">Role Listesi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


