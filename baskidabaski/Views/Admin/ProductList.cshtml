@using baskidabaski.Models;


@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
@model ProductListViewModel
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h4>Ürün Tablosu</h4>
                </div>

                <div class="card-header pb-0">
                    <h6> <a asp-action="ProductCreate" asp-controller="Admin" class="btn btn-outline-info">Ürün Ekle</a></h6>
                </div>

                <div>
                   
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        @if (Model.Products.Count<1)
                        {
                            <div class="alert alert-danger" role="alert">
                               Kayıtlı ürün yok.
                            </div>
                        }
                        else{
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Price</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Is Home</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Is Approved</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Added Date</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in Model.Products)
                                {
                                    <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                  
                                                <img src="~/image/productimg/@item.image1" class="avatar avatar-sm me-3">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.Name</h6>
                                             
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@item.Price.ToString("c")</p>
                                      
                                    </td>
                                   
                                    <td class="align-middle text-center text-sm">
                                        @if (item.IsHome)
                                            {
                                                 <span class="badge badge-sm bg-gradient-success">Anaysafada</span>@* secondary*@
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-gradient-secondary">Anasayfada değil</span>
                                                @* secondary*@
                                            }
                                            
                                       
                                    </td>
                                        <td class="align-middle text-center text-sm">
                                            @if (item.IsApproved)
                                            {
                                                <span class="badge badge-sm bg-gradient-success">Onaylı</span>
                                                @* secondary*@
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-gradient-secondary">Onaylı değil</span>
                                                @* secondary*@
                                            }
                                        </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@item.DateAdded.ToShortTimeString()</span>
                                    </td>
                                    <td class="align-middle">
                                        <a href="/admin/productupdate/@item.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit Product">
                                            Edit
                                            </a><a href="/admin/productdelete/@item.Id" class="text-danger font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete Product">
                                                Delete
                                            </a>
                                    </td>
                                </tr>
                                }
                                
                              
                            </tbody>
                        </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
     
</div>
