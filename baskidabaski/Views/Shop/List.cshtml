@{
    ViewData["Title"] = "List";
    Layout = "~/Pages/Shared/_UILayout.cshtml";
}






@model ProductListViewModel
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/home/index">Anasayfa</a></li>
                    <li class="active"><a href="index.html"><i class="fa fa-angle-right" aria-hidden="true"></i>Ürünler</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            @await Component.InvokeAsync("_categorypartial")
            <!-- Deal of the week -->
            <!-- Main Content -->

            <div class="main_content">

                <!-- Products -->

                <div class="products_iso">
                    <div class="row">
                        <div class="col">

                            <!-- Product Sorting -->

                            <div class="product_sorting_container product_sorting_container_top">
                                <ul class="product_sorting">
                                    <li>
                                        <span class="type_sorting_text">Default Sorting</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_type">
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "original-order" }'><span>Varsayılan</span></li>
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "price" }'><span>Fiyat</span></li>
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "name" }'><span>Ürün Adı</span></li>
                                        </ul>
                                    </li>
                                    	<li>
                                    <span>Show</span>
                                    <span class="num_sorting_text">6</span>
                                    <i class="fa fa-angle-down"></i>
                                    <ul class="sorting_num">
                                    <li class="num_sorting_btn"><span>6</span></li>
                                    <li class="num_sorting_btn"><span>12</span></li>
                                    <li class="num_sorting_btn"><span>24</span></li>
                                    </ul>
                                    </li>
                                </ul>
                                <div class="pages d-flex flex-row align-items-center">
                                    <div class="page_current">
                                        <span>@Model.PageInfo.CurrentPage</span>
                                        <ul class="page_selection">
                                            @for (int i = 0; i < Model.PageInfo.TotalPages(); i++)
                                            {

                                                <li><a href="/shop/list/@Model.PageInfo.CurrentCategory?page=@(i+1)">@(i + 1)</a></li>
                                            }
                                        </ul>
                                    </div>
                                    <div class="page_total"><span>of</span>@Model.PageInfo.TotalPages()</div>
                                    @if (Model.PageInfo.CurrentPage < Model.PageInfo.TotalPages())
                                    {
                                        <div id="next_page_1" class="page_next"><a href="/shop/list/@Model.PageInfo.CurrentCategory?page=@(Model.PageInfo.CurrentPage+1)"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>

                                    }
                                </div>


                            
                            </div>

                            <!-- Product Grid -->

                            <div class="product-grid">

                                <!-- Product 1 -->
                                @foreach (var item in Model.Products)
                                {
                                    <div class="product-item men">
                                        <div class="product discount product_filter">
                                            <div class="product_image">
                                                <img src="~/image/productimg/@item.image1" alt="">
                                            </div>
                                            <div class="favorite favorite_left"></div>
                                            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>
                                            <div class="product_info">
                                                <h6 class="product_name"><a href="/shop/details/@item.Id">@item.Name</a></h6>
                                                <div class="product_price">@item.Price </div>
                                            </div>
                                        </div>
                                        <div class="red_button add_to_cart_button"><a href="#">Sepete Ekle</a></div>
                                    </div>


                                }

                            </div>

                            <!-- Product Sorting -->

                            <div class="product_sorting_container product_sorting_container_bottom clearfix mt-3">
                                <ul class="product_sorting">
                                    <li>
                                        <span>Show:</span>
                                        <span class="num_sorting_text">04</span>
                                        <i class="fa fa-angle-down"></i>

                                        <ul class="sorting_num">
                                            <li class="num_sorting_btn"><span>01</span></li>
                                            <li class="num_sorting_btn"><span>02</span></li>
                                            <li class="num_sorting_btn"><span>03</span></li>
                                            <li class="num_sorting_btn"><span>04</span></li>
                                        </ul>

                                    </li>
                                </ul>
                                <span class="showing_results"> 1–@Model.PageInfo.TotalPages() sayfa arasında  @Model.Products.Count() sonuç gösteriliyor.</span>

                                <div class="pages d-flex flex-row align-items-center">
                                    <div class="page_current">
                                        <span>@Model.PageInfo.CurrentPage</span>
                                        <ul class="page_selection">
                                            @for (int i = 0; i < Model.PageInfo.TotalPages(); i++)
                                            {

                                                <li><a href="/shop/list/@Model.PageInfo.CurrentCategory?page=@(i+1)">@(i + 1)</a></li>
                                            }
                                        </ul>
                                    </div>
                                    <div class="page_total"><span>of</span>@Model.PageInfo.TotalPages()</div>
                                    @if (Model.PageInfo.CurrentPage < Model.PageInfo.TotalPages())
                                    {
                                        <div id="next_page_1" class="page_next"><a href="/shop/list/@Model.PageInfo.CurrentCategory?page=@(Model.PageInfo.CurrentPage+1)"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>

                                    }
                                </div>



@* 
                                <div class="pages d-flex flex-row align-items-center">
                                    <div class="page_current">
                                        <span>@Model.PageInfo.CurrentPage</span>

                                        <div class="product_sorting_container product_sorting_container_bottom clearfix">

                                            <ul>
                                                @for (int i = 0; i < Model.PageInfo.TotalPages(); i++)
                                                {

                                                    <li><a href="/shop/list/@Model.PageInfo.CurrentCategory?page=@(i+1)">@(i + 1)</a></li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="page_total"><span>of</span>@Model.PageInfo.TotalPages()</div>
                                        @if (Model.PageInfo.CurrentPage < Model.PageInfo.TotalPages())
                                        {
                                            <div id="next_page_1" class="page_next"><a href="/shop/list/@Model.PageInfo.CurrentCategory?page=@(Model.PageInfo.CurrentPage+1)"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>

                                        }
                                    </div>

                                </div>
 *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="benefit">
        <div class="container">
            <div class="row benefit_row">
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-truck" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>free shipping</h6>
                            <p>Suffered Alteration in Some Form</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-money" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>cach on delivery</h6>
                            <p>The Internet Tend To Repeat</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-undo" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>45 days return</h6>
                            <p>Making it Look Like Readable</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>opening all week</h6>
                            <p>8AM - 09PM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

