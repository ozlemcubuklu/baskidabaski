@using Entity;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
@model List<Product>
   <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Ürün Listesi</span> </h4>
    <div>
        <a href="/admin/product/productCreate">Ürün Ekle</a>
    </div>
              <!-- Basic Bootstrap Table -->
              <div class="card">
                <h5 class="card-header">Ürünler</h5>

                <div class="table-responsive text-nowrap">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>İsim</th>
                        <th>Fiyat</th>
                        <th>Anasayfada mı?</th>
                        <th>Onaylı mı?</th>
                        <th>#</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                     
                          @foreach (var item in Model)
                        { <tr>
                            <td>
                                <div class="d-flex px-2 py-1">
                                    <div>

                                        <img src="~/image/productimg/@item.image1" class="avatar avatar-sm me-3">
                                    </div>
                                    <div class="d-flex flex-column justify-content-center">
                                        <h6 class="mb-0 text-sm">@item.Name</h6>

                                    </div>
                                </div>
                            </td>
                            <td>@item.Price ₺</td>
                            <td>
                             @if (item.IsHome)
                                {
                                    <span class="badge bg-label-success me-1">Anasayfada</span>
                                } 
                                else
                                {
                                    <span class="badge bg-label-danger me-1">Anasayfada Değil</span>
                                }
                            </td>
                            <td>
                                @if (item.IsApproved)
                                {
                                    <span class="badge bg-label-success me-1">Onaylı</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-danger me-1">Onaylı Değil</span>
                                }
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/admin/product/ProductUpdate/@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="/admin/product/productdelete/@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                        
                      
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Basic Bootstrap Table -->
            </div>