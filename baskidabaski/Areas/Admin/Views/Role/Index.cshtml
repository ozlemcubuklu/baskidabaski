

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
@model List<AppRole>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Role Listesi</span> </h4>
    <div>
        <a href="/admin/Role/CreateRole">Role Ekle</a>
    </div>
    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Roller</h5>

        <div class="table-responsive text-nowrap">
            @if (Model.Count<0)
            {
                <div class="alert alert-danger" role="alert">Rol yok!</div>
            }
            else
            {
                <table class="table">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                        <div class="btn-group" role="group" aria-label="Basic example">
                                            <a href="/admin/role/roleupdate/@item.Id" class="btn btn-outline-secondary"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                            <a href="/admin/role/Deleterole/@item.Id" class="btn btn-outline-secondary"><i class="bx bx-trash me-1"></i> Delete</a>
                                        <a href="/admin/role/UserListByRoleId/@item.Id" class="btn btn-outline-secondary"><i class="bx bx-library me-1"></i> User List</a>
                                       
                                          
                                        </div>
                                  

                            
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
            }
            
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>